 # https://github.com/eslint/eslint/blob/master/docs/configuring/README.md

  ecmaFeatures:
    blockBindings: true
    forOf: true
    jsx: true

  env:
    node: true
    browser: true

  # https://github.com/eslint/eslint/tree/master/docs/rules
  rules:
    # best practices
    block-scoped-var: 1
    complexity: 0
    consistent-return: 1
    curly: 2
    default-case: 1
    dot-notation: 0
    eqeqeq: 2
    guard-for-in: 1
    no-alert: 2
    no-caller: 2
    no-div-regex: 0
    no-else-return: 1
    no-empty-label: 2
    no-eq-null: 2
    no-eval: 2
    no-extend-native: 2
    no-fallthrough: 1
    no-floating-decimal: 1
    no-implied-eval: 2
    no-labels: 2
    no-iterator: 2
    no-lone-blocks: 2
    no-loop-func: 1
    no-multi-str: 1
    no-native-reassign: 2
    no-new: 0
    no-new-func: 2
    no-new-wrappers: 1
    no-octal: 2
    no-octal-escape: 2
    no-proto: 2
    no-redeclare: 2
    no-return-assign: 2
    no-script-url: 2
    no-self-compare: 2
    no-sequences: 1
    no-unused-expressions: 2
    no-warning-comments: 0
    no-with: 2
    radix: 1
    wrap-iife: 1
    yoda: 0

    strict: 2
    quotes: 0